<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_all_page"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/background_title" >

        <FrameLayout
            android:id="@+id/img_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp" >

            <ImageView
                android:id="@+id/back_img"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/back_title" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="忘记密码"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_02"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/background_item" >

        <TextView
            android:id="@+id/tv_help"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="30dp"
            android:gravity="center_vertical"
            android:text="请输入你注册时的手机号并获取验证码"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_margin_left"
            android:src="@drawable/divider_line_short" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_03"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/background_item" >

        <TextView
            android:id="@+id/tv_phonenumber"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:text="手机号"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_phonenumber"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tv_phonenumber"
            android:background="@null"
            android:gravity="center"
            android:hint="请输入您注册时的手机号"
            android:maxLength="11"
            android:inputType="number"
            android:textColor="@color/color_text_all_gray"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_margin_left"
            android:src="@drawable/divider_line_short" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_04"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/background_item" >

        <TextView
            android:id="@+id/tv_code_identify"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:text="验证码"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_code_identify"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tv_code_identify"
            android:background="@null"
            android:gravity="center"
            android:hint="请输入验证码"
            android:maxLength="4"
            android:inputType="number"
            android:textColor="@color/color_text_all_gray"
            android:textSize="15sp" />

        <com.easemob.chatuidemo.widget.TimeButton
            android:id="@+id/img_send_identifying"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
               android:layout_alignParentRight="true"
               android:gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/background_send_identifying"
            android:padding="5dp"
            android:text=""
            android:textColor="@color/color_text_all_gray"
            android:textSize="@dimen/sizi_register_text" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/dp_margin_left"
            android:src="@drawable/divider_line_short" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/img_identify_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/img_background_identyfy_normal" />

</LinearLayout>