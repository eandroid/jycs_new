<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_all_page"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:singleLine="true"
        android:text="2015-3-2 10:00:00"
        android:textSize="12sp" />

    <RelativeLayout
        android:id="@+id/rl_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@android:color/white" >

        <FrameLayout
            android:id="@+id/fm_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_info_notifi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:padding="8dp"
                android:singleLine="true"
                android:text="请18店、26店、103店店长将考勤表及时上传；16号大家一起开会处理事情"
                android:textColor="#3a3a3a"
                android:textSize="14sp" />

          
        </FrameLayout>

        <ImageView
            android:id="@+id/img_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/fm_info"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/src_divider" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_divider" >

            <ImageView
                android:id="@+id/img_collect"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:visibility="visible"
                android:layout_gravity="bottom|right"
                android:src="@drawable/src_collect" />
        </FrameLayout>
    </RelativeLayout>

</LinearLayout>